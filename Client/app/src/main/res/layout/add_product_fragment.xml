<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/product_list_fragment">

    <EditText
        android:id="@+id/manufacturerValueAdd"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/manufacturerTitleAdd"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/priceValueAdd"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/manufacturerValueAdd"
        android:layout_marginStart="2dp"
        android:layout_marginTop="89dp"
        android:layout_toEndOf="@+id/priceTitleAdd"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/modelValueAdd"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/manufacturerValueAdd"
        android:layout_marginStart="2dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/modelTitleAdd"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/priceTitleAdd"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_below="@+id/modelTitleAdd"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="price"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/modelTitleAdd"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:layout_below="@+id/manufacturerTitleAdd"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="model"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/manufacturerTitleAdd"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="manufacturer"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new product"
        android:textColor="#4CAF50"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonAddNewProduct"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceValueAdd"
        android:layout_alignParentStart="true"
        android:layout_marginStart="215dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#8BC34A"
        android:text="Add" />

</RelativeLayout>