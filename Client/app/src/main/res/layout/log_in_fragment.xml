<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.LogInFragment">

    <TextView
        android:id="@+id/signInHeader"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Sign in"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogIn" />

    <TextView
        android:id="@+id/passwordTitleSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="password"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTitleSignIn" />

    <EditText
        android:id="@+id/loginValueSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/loginTitleSignIn"
        app:layout_constraintTop_toBottomOf="@+id/signInHeader" />

    <EditText
        android:id="@+id/passwordValueSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/passwordTitleSignIn"
        app:layout_constraintTop_toBottomOf="@+id/loginValueSignIn" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginTop="25dp"
        android:text="SIGN IN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTitleSignIn" />

    <Button
        android:id="@+id/buttonSignInGoogle"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:text="SIGN IN WITH GOOGLE"
        app:layout_constraintStart_toEndOf="@+id/buttonSignIn"
        app:layout_constraintTop_toBottomOf="@+id/passwordValueSignIn" />

    <TextView
        android:id="@+id/loginTitleSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="login"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInHeader" />

    <TextView
        android:id="@+id/logInHeader"
        android:layout_width="377dp"
        android:layout_height="33dp"
        android:text="Log in"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginTitleLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="login"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInHeader" />

    <TextView
        android:id="@+id/passwordTitleLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="password"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTitleLogIn" />

    <EditText
        android:id="@+id/loginValueLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/loginTitleLogIn"
        app:layout_constraintTop_toBottomOf="@+id/logInHeader" />

    <EditText
        android:id="@+id/passwordValueLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/passwordTitleLogIn"
        app:layout_constraintTop_toBottomOf="@+id/loginValueLogIn" />

    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginTop="26dp"
        android:text="LOG IN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTitleLogIn" />

    <Button
        android:id="@+id/buttonLogInGoogle"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:text="LOG IN WITH GOOGLE"
        app:layout_constraintStart_toEndOf="@+id/buttonLogIn"
        app:layout_constraintTop_toBottomOf="@+id/passwordValueLogIn" />

</androidx.constraintlayout.widget.ConstraintLayout>
